{
    "html": {
      "requiredTags": ["header", "footer", "nav", "main", "section", "article"],
      "forbiddenTags": ["blink", "marquee"]
    },
    "css": {
      "requiredSelectors": [".container", "#main"],
      "requiredProperties": ["display", "justify-content"],
      "forbiddenProperties": ["position", "z-index"]
    },
    "js": {
      "requiredFunctions": ["fetch", "addEventListener"],
      "forbiddenFunctions": ["eval", "document.write"]
    },
    "git": {
      "requiredBranches": ["main", "develop"],
      "minCommits": 5,
      "forbidNoFFMerge": false,
      "minMerges": 1,
      "minLinesChanged": 50,
      "requiredGitIgnoreEntries": ["/tmp", "secrets.env"],
      "requiredFiles": ["README.md", "package.json"]
    }
  }